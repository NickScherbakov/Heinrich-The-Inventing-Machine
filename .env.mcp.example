# GitHub MCP Server Environment Configuration
# Copy this file to .env.mcp and fill in your values
# NEVER commit .env.mcp to version control!

# ============================================
# GitHub Authentication
# ============================================
# Create a Personal Access Token at:
# https://github.com/settings/tokens
# Required scopes: repo, read:org, user:email, workflow
GITHUB_PERSONAL_ACCESS_TOKEN=ghp_your_token_here

# ============================================
# Repository Configuration
# ============================================
GITHUB_OWNER=NickScherbakov
GITHUB_REPO=Heinrich-The-Inventing-Machine

# ============================================
# Server Configuration
# ============================================
MCP_PORT=3000
NODE_ENV=production

# ============================================
# Logging Configuration
# ============================================
# Options: debug, info, warn, error
LOG_LEVEL=info

# Options: json, text
LOG_FORMAT=json

# ============================================
# Rate Limiting (Optional)
# ============================================
# Maximum number of requests per window
RATE_LIMIT_MAX=100

# Time window in milliseconds (default: 15 minutes)
RATE_LIMIT_WINDOW=900000

# ============================================
# Advanced Options (Optional)
# ============================================
# Request timeout in milliseconds
REQUEST_TIMEOUT=30000

# Enable caching
ENABLE_CACHE=true

# Cache TTL in seconds
CACHE_TTL=300
